# Application
APP_NAME=management
SERVER_PORT=your_port
PORT=your_port_here
DATE_FORMAT=DD-MM-YYYY

# Database
DB_URL=jdbc:mysql://localhost:3306/your_database_name
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_DRIVER=com.mysql.cj.jdbc.Driver

# JPA/Hibernate
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_DIALECT=org.hibernate.dialect.MySQL8Dialect
JPA_FORMAT_SQL=true

# Logging
LOG_LEVEL_SECURITY=DEBUG
LOG_LEVEL_APP=DEBUG

# Security
SECURITY_USER_NAME=admin
SECURITY_USER_PASSWORD=your_admin_password
SECURITY_USER_ROLES=ADMIN

# JWT
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=86400000

# CORS Configuration
CORS_ALLOWED_ORIGIN_DEV=http://localhost:3000
CORS_ALLOWED_ORIGIN_DEV2=http://localhost:4200
CORS_ALLOWED_ORIGIN_PROD=https://your-frontend-domain.com

# CORS Settings
CORS_MAX_AGE=3600
CORS_ALLOW_CREDENTIALS=true

# Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true